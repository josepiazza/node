generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
}

model Persona {
  id        Int      @id @default(autoincrement())
  nombre    String?
  celular   String
  whatsapp  String?
  agendas   Agenda[]
  horarioLaboral String?
  aceptoTyC Boolean @default(false)
  registrado Boolean @default(false)
  messageLogs MessageLog[]

  createdAt DateTime @default(now())
}

model Agenda {
  id         Int       @id @default(autoincrement())
  personaId Int
  dayOfWeek Int       // 1 = Lunes ... 7 = Domingo
  hour      Int       // 0 - 23
  minute    Int       // 0 - 59
  active    Boolean   @default(true)

  persona   Persona   @relation(fields: [personaId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())

  @@index([personaId])
  @@index([dayOfWeek, hour, minute])
}

enum MessageSender {
  APP
  USER
}

model MessageLog {
  id        Int           @id @default(autoincrement())
  personaId Int
  content   String
  sender    MessageSender
  createdAt DateTime      @default(now())

  persona   Persona       @relation(fields: [personaId], references: [id], onDelete: Cascade)

  @@index([personaId])
  @@index([createdAt])
}
